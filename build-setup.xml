<?xml version="1.0" encoding="UTF-8"?>
<project name="instinct-setup" default="default" basedir=".">

    <property name="project.longname" value="Instinct Behaviour Driven Development (BDD) Framework for Java"/>
    <property name="project.shortname" value="instinct"/>
    <property name="project.version.major" value="0"/>
    <property name="project.version.minor" value="0.1"/>
    <property name="version-status" value=""/>
    <property name="project.version.full" value="${project.version.major}.${project.version.minor}${version-status}"/>
    <property name="project.jar" value="${project.shortname}-${project.version.full}.jar"/>

    <property name="build.dir" value="build"/>
    <property name="doc.dir" value="doc"/>
    <property name="lib.dir" value="lib"/>
    <property name="src.dir" value="src/main"/>
    <property name="test.dir" value="src/test"/>

    <property name="checkstyle.lib.dir" value="${lib.dir}/checkstyle"/>
    <property name="prod.src.dir" value="${src.dir}/java"/>
    <property name="test.src.dir" value="${test.dir}/java"/>
    <property name="prod.classes.dir" value="${build.dir}/prod-classes"/>
    <property name="test.classes.dir" value="${build.dir}/test-classes"/>
    <property name="dist.dir" value="${build.dir}/dist"/>
    <property name="javadoc.dir" value="${build.dir}/javadoc"/>
    <property name="test.results.dir" value="${build.dir}/test-results"/>
    <property name="test.results" value="${test.results.dir}/All-Tests.xml"/>
    <property name="compile.debug" value="true"/>
    <property name="compile.debuglevel" value="source,lines,vars"/>
    <property name="compile.deprecation" value="false"/>
    <property name="compile.optimize" value="true"/>
    <property name="java.src.version" value="1.5"/>
    <property name="atomic.test.src.dir" value="${test.src.dir}"/>
    <property name="atomic.test.classes.dir" value="${test.classes.dir}"/>
    <property name="atomic.test.results.dir" value="${build.dir}/unit-test-results"/>
    <property name="atomic.test.results" value="${atomic.test.results.dir}/Unit-Tests.xml"/>
    <property name="slow.test.src.dir" value="${test.src.dir}"/>
    <property name="slow.test.classes.dir" value="${test.classes.dir}"/>
    <property name="slow.test.results.dir" value="${build.dir}/slow-test-results"/>
    <property name="slow.test.results" value="${slow.test.results.dir}/Slow-Tests.xml"/>

    <property name="coverage.dir" value="${build.dir}/coverage" />
    <property name="out.instr.dir" value="${build.dir}/outinstr" />
    <property name="emma.filter" value="com.googlecode.instinct.*" />

    <patternset id="production.code.pattern">
        <include name="**/*.java"/>
        <exclude name="**/*Test*.java"/>
    </patternset>
    <patternset id="test.code.pattern">
        <include name="**/*Test.java"/>
    </patternset>
    <patternset id="atomic.test.code.pattern">
        <include name="**/*AtomicTest.java"/>
    </patternset>
    <patternset id="slow.test.code.pattern">
        <include name="**/*SlowTest.java"/>
    </patternset>
    <patternset id="all.code.pattern">
        <include name="**/*.java"/>
    </patternset>
    <patternset id="test.class.pattern">
        <include name="**/*Test"/>
    </patternset>

    <patternset id="production.classpath.pattern">
        <include name="${lib.dir}/spring/spring-beans-2.0.1.jar"/>
        <include name="${lib.dir}/spring/spring-core-2.0.1.jar"/>
        <include name="${lib.dir}/jakarta-commons/commons-logging-1.0.4.jar"/>
    </patternset>

    <patternset id="test.classpath.pattern">
        <include name="${lib.dir}/junit-4.1.jar"/>
        <include name="${lib.dir}/gsbase-2.0.1.jar"/>
        <include name="${lib.dir}/jester-1.3.7.jar"/>
        <include name="${lib.dir}/easymock/easymock-2.1.0.jar"/>
        <include name="${lib.dir}/easymock/easymockclassextension-2.1.0.jar"/>
        <include name="${lib.dir}/easymock/cglib-nodep-2.1_3.jar"/>
        <include name="${lib.dir}/spring/spring-beans-2.0.1.jar"/>
        <include name="${lib.dir}/spring/spring-context-2.0.1.jar"/>
        <include name="${lib.dir}/spring/spring-core-2.0.1.jar"/>
        <include name="${lib.dir}/spring-rcp/forms-1.0.7.jar"/>
        <include name="${lib.dir}/spring-rcp/looks-2.0.4.jar"/>
        <include name="${lib.dir}/spring-rcp/spring-binding-1.0-rc3.jar"/>
        <include name="${lib.dir}/spring-rcp/spring-richclient-full-0.2.1.jar"/>
        <include name="${lib.dir}/spring-rcp/swingx-0.2005-06-02.jar"/>
        <include name="${lib.dir}/jakarta-commons/commons-logging-1.0.4.jar"/>
        <include name="${lib.dir}/emma/emma-2.0.5312.jar"/>
        <include name="${lib.dir}/emma/emma_ant-2.0.5312.jar"/>
   </patternset>

    <fileset id="production.code.fileset" dir="${prod.src.dir}">
        <patternset refid="production.code.pattern"/>
    </fileset>
    <fileset id="gen.code.fileset" dir="${gen.src.dir}">
        <patternset refid="production.code.pattern"/>
    </fileset>
    <fileset id="test.code.fileset" dir="${test.src.dir}">
        <patternset refid="test.code.pattern"/>
    </fileset>
    <fileset id="atomic.test.code.fileset" dir="${atomic.test.src.dir}">
        <patternset refid="atomic.test.code.pattern"/>
    </fileset>
    <fileset id="slow.test.code.fileset" dir="${slow.test.src.dir}">
        <patternset refid="slow.test.code.pattern"/>
    </fileset>
    <fileset id="all.code.fileset" dir="${prod.src.dir}">
        <patternset refid="all.code.pattern"/>
    </fileset>

    <path id="gen.code.path">
        <pathelement location="${gen.src.dir}"/>
    </path>
    <path id="production.code.path">
        <pathelement location="${prod.src.dir}"/>
    </path>
    <path id="test.code.path">
        <pathelement location="${test.src.dir}"/>
    </path>
    <path id="atomic.test.code.path">
        <path refid="test.code.path"/>
    </path>
    <path id="slow.test.code.path">
        <path refid="test.code.path"/>
    </path>
    <path id="all.code.path">
        <path refid="production.code.path"/>
        <path refid="test.code.path"/>
        <path refid="gen.code.path"/>
    </path>

    <path id="gen.class.path"/>

    <path id="production.class.path">
        <fileset dir="${basedir}">
            <patternset refid="production.classpath.pattern"/>
        </fileset>
    </path>
    <path id="test.class.path">
        <fileset dir="${basedir}">
            <patternset refid="test.classpath.pattern"/>
        </fileset>
        <pathelement location="${out.instr.dir}/classes"/>
        <pathelement location="${prod.classes.dir}"/>
        <pathelement location="${test.classes.dir}"/>
    </path>

    <path id="atomic.test.class.path">
        <path refid="test.class.path"/>
    </path>
    <path id="slow.test.class.path">
        <path refid="test.class.path"/>
    </path>

    <taskdef resource="emma_ant.properties" classpathref="test.class.path" />

    <taskdef resource="checkstyletask.properties"
             classpath="${checkstyle.lib.dir}/checkstyle-all-4.2.jar"/>

    <target name="default">
        <echo message="Nothing to see here..."/>
    </target>

    <path id="sablecc.class.path">
        <pathelement location="${lib.dir}/sablecc-3.2.jar"/>
    </path>
    <taskdef name="sablecc" classname="org.sablecc.ant.taskdef.Sablecc" classpathref="sablecc.class.path"/>

    <macrodef name="sablecc.macro">
        <attribute name="grammar.file"/>
        <sequential>
            <mkdir dir="${gen.src.dir}"/>
            <sablecc src="${sablecc.src.dir}" outputdirectory="${gen.src.dir}">
                <include name="@{grammar.file}"/>
            </sablecc>
        </sequential>
    </macrodef>

</project>
